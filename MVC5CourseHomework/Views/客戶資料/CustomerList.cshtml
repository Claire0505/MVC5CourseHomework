@model IEnumerable<MVC5CourseHomework.Models.CustomerViewModel>

@{
    ViewBag.Title = "客戶清單列表";
}

<h2>客戶清單列表</h2>

<table class="table table-bordered " style="width:35%" >
    <tr style="background-color:#63aaf6">
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.聯絡人數量)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.銀行帳戶數量)
        </th>
        
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td >
            @Html.DisplayFor(modelItem => item.聯絡人數量)
        </td>
        <td >
            @Html.DisplayFor(modelItem => item.銀行帳戶數量)
        </td>
           
    </tr>
}

</table>
