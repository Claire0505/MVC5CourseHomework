@model IEnumerable<MVC5CourseHomework.Models.客戶聯絡人>

@{
    ViewBag.Title = "Index";
}

<h2>客戶聯絡人</h2>

@using (Html.BeginForm("Search", "客戶聯絡人"))
{
<div class="form-inline">
    @Html.DropDownList("contactTitle", null, "-- 請選擇職稱 --", htmlAttributes: new { @class = "form-control" })
    @Html.DropDownList("custName", null, "-- 請選擇客戶名稱 --", htmlAttributes: new { @class = "form-control" })

    @Html.TextBox("contactName", null, new { @class = "form-control", placeholder = "請輸入聯絡人姓名" })
    @Html.TextBox("contactPhone", null, new { @class = "form-control", placeholder = "請輸入手機號碼" })
    @Html.TextBox("contactTel", null, new { @class = "form-control", placeholder = "請輸入電話號碼" })

    <button type="submit" class="btn btn-primary" name="submit" value="Search">搜尋</button>
    <button type="submit" class="btn btn-success" name="submit" value="Export">匯出 Excel</button>
</div>
}

<br />
<p class="text-left">
    @Html.ActionLink("Create new", "Create", null, new { @class = "btn btn-primary" })
    @*<a href="@Url.Action("Export")" class="btn btn-success">匯出 Excel</a>*@
</p>

<table class="table table-bordered table-hover">
    <tr style="background-color:#8fc2f8">
        <th>
            @Html.ActionLink("職稱", "Index", new { sortOrder = ViewBag.jobTitleSortParm })
        </th>
        <th>
            @Html.ActionLink("姓名", "Index", new { sortOrder = ViewBag.nameSortParm })
           
        </th>
        <th>
            @Html.ActionLink("Email", "Index", new { sortOrder = ViewBag.emailSortParm })
           
        </th>
        <th>
            @Html.ActionLink("手機", "Index", new { sortOrder = ViewBag.phoneNumSortParm })
            
        </th>
        <th>
            @Html.ActionLink("電話", "Index", new { sortOrder = ViewBag.telNumSortParm })
           
        </th>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.customerNameSortParm })
            
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.職稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.姓名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.手機)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.電話)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-primary" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-info" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { @class = "btn btn-warning" })
        </td>
    </tr>
}

</table>
